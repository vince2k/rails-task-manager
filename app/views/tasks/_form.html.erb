<div class="mb-3">
  <%= form_with model: @task do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "fw-bold form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
    <div class="mb-3">
    <%= f.label :details, class: "fw-bold form-label" %>
    <%= f.text_area :details, class: "form-control", required: true %>
  </div>
   <% if action_name == "edit" %>
    <div class="mb-3">
      <%= f.check_box :completed %>
      <%= f.label :completed, "Completed" %>
    </div>
  <% end %>

  <div>
    <%= f.submit action_name == "edit" ? "Update task" : "Create task",
                 class: "btn text-white", style:"background-color: #377BB5" %>
  </div>
  <% end %>
</div>

<%= render "back", task: @task %>
